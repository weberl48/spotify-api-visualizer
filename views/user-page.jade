extends layout

block content
    header(name = "Access-Control-Allow-Origin" value = "*")
      .container
          p.left
            ul
              li
                div
                  a(href='/') Home |
              |   
              li
                div
                  a(href='https://github.com/weberl48/spotify-api-visualizer') Github |
              |   
              li
                div
                  a(href='#home') Contact |
              |   
              li
                div
                  a(href='#home') About 
          if user
            h1(style='color: black') Hello #{user}
            //- a(href='/visualize/user/' + userId) #{user}'s Dashboard
            br
            a(href='/visualize/logout') Logout
          else
            form(action='/visualize/login', method='POST')
              label(style='color: black;') User Name
              input(type='text', name='userName')
              if error
                p.error= error
              label(style='color: black;') Password
              input(type='password', name='password')
              input(type='submit', value='Login')
            a(href='/visualize/sign-up') Sign Up!
            p.right
    .main
      .search
        h1 #{user}'s Fav Songs
        for fav in userFavs
          img.dash-album(src=fav.albumImg)
